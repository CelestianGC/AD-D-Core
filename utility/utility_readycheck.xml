<root>
  <windowclass name="readycheck" >
    <frame>charsheethelper</frame>
    <placement>
      <size width="300" height="300" />
    </placement>
    <sizelimits>
      <minimum width="200" height="200" />
      <dynamic />
    </sizelimits>
    <minimize>minimized_npc</minimize>
    <nodelete />
    <script file="utility/scripts/readycheck.lua" />
    <sheetdata>
			<windowtitlebar name="title">
				<resource>readycheck_window_title</resource>
			</windowtitlebar>
      <anchor_title_charsheet name="contentanchor" />
			<anchor_column name="columnanchor" />
			<genericcontrol name="rightanchor">
				<anchored width="0" height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="4" />
					<right offset="-15" />
				</anchored>
			</genericcontrol>
			<genericcontrol name="leftanchor">
				<anchored width="0" height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="4" />
					<left offset="-15" />
				</anchored>
			</genericcontrol>
			<genericcontrol name="contentframe">
				<anchored to="contentanchor">
					<top anchor="bottom" offset="0" />
					<left />
					<right />
					<bottom parent="" offset="-30" />
				</anchored>
			</genericcontrol>

			<subwindow_record name="main">
				<anchored>
					<top offset="20" />
					<bottom offset="-35" />
					<left offset="15" />
					<right offset="-15" />
				</anchored>
				<class>ready_check_main</class>
				<activate />
				<fastinit />
			</subwindow_record>

			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>

			<resize_charsheethelper />
			<close_charsheethelper />
      
    </sheetdata>
  </windowclass>

  <!-- ready check main window -->
  <windowclass name="ready_check_main">
    <script>
      function onInit()
        updateVisual();
      end
      
      function updateVisual()
        if User.isHost() then
          list.setVisible(true);
          main_user.setVisible(false);
        else
          main_user.setVisible(true);
          list.setVisible(false);
        end
      end
    </script>
    <sheetdata>
      <anchor_column name="columnanchor" />
      <!-- host visible -->
      <ready_check_list name="list">
        <datasource>connectedlist</datasource>
        <class>ready_check_entry</class>
      </ready_check_list>
      
      <!-- User visible -->
      <subwindow name="main_user">
        <anchored>
          <top parent="columnanchor" anchor="bottom" relation="relative" offset="20" />
          <left />
          <right />
        </anchored>
        <class>ready_check_entry_user</class>
      </subwindow>
      
    </sheetdata>
  </windowclass>
  
  <windowclass name="ready_check_entry">
		<margins control="0,0,0,5" />
    <script file="utility/scripts/readycheck_host.lua" />
    <sheetdata>
			<anchor_column name="columnanchor" />

			<label name="name_label">
        <anchored>
          <top position="bottom" relation="relative"/>
          <left anchor="center" offset="-20"/>
          <right />
        </anchored>
        <font>reference-b-large</font>
			</label>
 
      <button_checkbox name="ready_check_select">
				<anchored to="name_label" position="left" offset="2,0" width="10" />
				<tooltip text="ARE YOU READY???" />
			</button_checkbox>
      
    </sheetdata>
  </windowclass>
  
  <windowclass name="ready_check_entry_user">
		<margins control="0,0,0,5" />
    <script file="utility/scripts/readycheck_user.lua" />
    <sheetdata>
			<anchor_column name="columnanchor" />

      <label name="name_label">
        <script>
          function onInit()
            local sUser = User.getUsername();
            setValue(sUser);
          end
        </script>
        <anchored>
          <top parent="columnanchor" position="bottom" relation="relative" offset="5"/>
          <left offset="5"/>
          <right offset="-5"/>
        </anchored>
        <font>reference-b-large</font>
        <center />
      </label>

      <button_text_sm>
        <anchored>
          <top parent="columnanchor" position="bottom" relation="relative" offset="25"/>
          <left offset="5"/>
          <right offset="-5"/>
        </anchored>
        <script>
          function onButtonPress()
            local sName = User.getUsername();
            window.parentcontrol.window.parentcontrol.window.readyPressed(sName,1);
          end
        </script>
        <state textres="readycheck_button_label" />
        <tooltip textres="readycheck_button_label_tooltip" />
      </button_text_sm>
      
    </sheetdata>
  </windowclass>
  
  <!-- template for user connected list for Host -->
  <template name="ready_check_list">
    <windowlist name="list">
      <anchored>
        <top parent="columnanchor" anchor="bottom" relation="relative" offset="20" />
        <left />
        <right />
      </anchored>
      <allowdelete />
      <child></child>
      <child><backcolor>1A40301E</backcolor></child>
      <noscroll />
    </windowlist>
  </template>

</root>
