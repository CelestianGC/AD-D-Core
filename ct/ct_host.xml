				<icon normal="button_weapon" pressed="button_weapon_down" />
				<tooltip textres="char_tooltip_actionaddweapon" />
				<invisible />
				<script>
					function onButtonPress()
						window.contents.subwindow.weapons.addEntry(true);
					end
				</script>
			</buttoncontrol>
    </sheetdata>
