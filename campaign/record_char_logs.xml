<root>
	<windowclass name="charsheet_logs">
		<script>
			function onDrop(x, y, draginfo)
				if draginfo.isType("shortcut") then
					local sClass, sRecord = draginfo.getShortcutData();

					if StringManager.contains({"ref_adventure"}, sClass) then
						CharManager.addInfoDB(getDatabaseNode(), sClass, sRecord);
						return true;
					end
				end
			end
      
      function onInit()
        if User.isHost() then
          clone_to_npc_label.setVisible(true);
          clone_to_npc.setVisible(true);
        else
          clone_to_npc_label.setVisible(false);
          clone_to_npc.setVisible(false);
        end
      end
		</script>
		<sheetdata>
			<button_iedit name="logs_iedit">
				<anchored position="insidebottomright" offset="10,10" />
				<tooltip textres="char_logs_tooltip_edit" />
				<script>
					function onValueChanged()
						local bEditMode = (getValue() == 1);
						
						window.contents.subwindow.adventurelist_iadd.setVisible(bEditMode);
						window.contents.subwindow.adventurelist.update();
					end
				</script>
			</button_iedit>

      <label name="clone_to_npc_label">
        <anchored position="insidebottomleft" offset="10,10" />
        <static textres="char_label_clone_to_npc" />
      </label>
 			<buttoncontrol name="clone_to_npc">
				<anchored to="clone_to_npc_label" position="righthigh" offset="10,0" width="20" height="20"/>
        <icon normal="button_expand" pressed="button_dialog_ok" />
				<script>
					function onButtonPress()
						if User.isHost() then
              local node = window.getDatabaseNode();
              local nodeTarget = ConvertManagerADND.convertToNPC(node);
              local w = Interface.openWindow("npc", nodeTarget.getNodeName());
              if w and w.name then
                w.name.setFocus();
              end
            end
					end
				</script>
			</buttoncontrol>
      
			<subwindow name="contents">
				<anchored>
					<top offset="20" />
					<bottom offset="-30" />
					<left offset="15" />
					<right offset="-15" />
				</anchored>
				<class>charsheet_logs_contents</class>
				<activate />
				<fastinit />
			</subwindow>
			<scrollbar_charcontents />
		</sheetdata>
	</windowclass>

	<!-- charsheet_log_contents -->
	<windowclass name="charsheet_logs_contents">
		<margins control="0,0,0,2" />
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<metalplate name="detailstitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
			</metalplate>
			<stringu name="faction">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="current" offset="5" />
					<left parent="detailstitle" />
					<right anchor="center" offset="-5" />
				</anchored>
			</stringu>
			<label_charfieldtop>
				<anchored to="faction" offset="0,5" />
				<static textres="char_label_faction" />
			</label_charfieldtop>
			<stringu name="dci">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left parent="detailstitle" anchor="center" offset="5" />
					<right parent="detailstitle" />
				</anchored>
			</stringu>
			<label_charfieldtop>
				<anchored to="dci" offset="0,5" />
				<static textres="char_label_dci" />
			</label_charfieldtop>

			<label_charframetop name="adventurestitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<static textres="char_logs_label_adventures" />
				<icons>char_notes</icons>
			</label_charframetop>
			<list_text name="adventurelist">
				<anchored to="adventurestitle">
					<top anchor="bottom" relation="relative" offset="5" />
					<left />
					<right />
				</anchored>
				<allowcreate />
				<allowdelete />
				<noscroll />
				<datasource>.adventurelist</datasource>
				<class>adventure_item</class>
				<sortby mergerule="replace"><control>name</control></sortby>
				<script>
					function update()
						local bEdit = (window.parentcontrol.window.logs_iedit.getValue() == 1);
						for _,w in ipairs(getWindows()) do
							w.idelete.setVisibility(bEdit);
						end
					end

					function addEntry(bFocus)
						local w = createWindow();
						if bFocus then
							w.name.setFocus();
						end
						return w;
					end
				</script>
			</list_text>
			<button_iadd name="adventurelist_iadd">
				<anchored to="adventurestitle" position="insidetopright" offset="5,0" />
				<target>adventurelist</target>
			</button_iadd>
		</sheetdata>
	</windowclass>

	<windowclass name="adventure_item">
		<margins control="0,0,0,2" />
		<sheetdata>
			<genericcontrol name="rightanchor">
				<anchored position="insidetopright" offset="0,2" height="0" width="0" />
			</genericcontrol>
			<linkcontrol name="shortcut">
				<anchored to="rightanchor" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<class>ref_adventure</class>
				<readonly />
			</linkcontrol>
			<button_idelete name="idelete">
				<anchored to="rightanchor">
					<top />
					<right anchor="left" offset="-5" />
				</anchored>
			</button_idelete>

			<string_textlistitem name="name">
				<anchored to="rightanchor">
					<top />
					<left parent="" offset="5" />
					<right anchor="left" relation="relative" offset="-10" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</string_textlistitem>
		</sheetdata>
	</windowclass>
</root>
