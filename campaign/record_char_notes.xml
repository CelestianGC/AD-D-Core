<root>
	<windowclass name="charsheet_notes">
		<sheetdata>
			<subwindow name="contents">
				<anchored>
					<top offset="20" />
					<bottom offset="-30" />
					<left offset="15" />
					<right offset="-15" />
				</anchored>
				<class>charsheet_notes_contents</class>
				<activate />
				<fastinit />
			</subwindow>
			<scrollbar_charcontents />
		</sheetdata>
	</windowclass>
	
	<windowclass name="charsheet_notes_contents">
		<margins control="0,0,0,2" />
		<sheetdata>
			<anchor_column name="columnanchor" />
			
            <!-- sex/age/height/weight/size title -->
			<metalplate name="detailstitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
			</metalplate>
			<stringu name="gender">
				<anchored to="detailstitle" position="insidetopleft" offset="0,25" width="70" height="20" />
			</stringu>
			<stringu name="age">
				<anchored to="gender" position="righthigh" offset="5,0" width="70" height="20" />
			</stringu>
			<stringu name="height">
				<anchored to="age" position="righthigh" offset="5,0" width="70" height="20" />
			</stringu>
			<stringu name="weight">
				<anchored to="height" position="righthigh" offset="5,0" width="70" height="20" />
			</stringu>
			<stringu name="size">
				<anchored to="weight" position="righthigh" offset="5,0" width="70" height="20" />
				<delaykeyupdate />
			</stringu>
			<label_charfieldtop>
				<anchored to="gender" offset="0,5" />
				<static textres="char_label_gender" />
			</label_charfieldtop>
			<label_charfieldtop>
				<anchored to="age" offset="0,5" />
				<static textres="char_label_age" />
			</label_charfieldtop>
			<label_charfieldtop>
				<anchored to="height" offset="0,5" />
				<static textres="char_label_height" />
			</label_charfieldtop>
			<label_charfieldtop>
				<anchored to="weight" offset="0,5" />
				<static textres="char_label_weight" />
			</label_charfieldtop>
			<label_charfieldtop>
				<anchored to="size" offset="0,5" />
				<static textres="char_label_size" />
			</label_charfieldtop>
            <!-- END sex/age/height/weight/size title -->

            <!-- alignment/deity title -->
			<metalplate name="detailstitle2">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="35" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
			</metalplate>
			<stringu name="alignment">
				<anchored to="detailstitle2" position="belowleft" offset="0,5" height="20">
					<right anchor="center" offset="-5" />
				</anchored>
			</stringu>
			<label_charfieldtop>
				<anchored to="alignment" offset="0,5" />
				<static textres="char_label_alignment" />
			</label_charfieldtop>
			<stringu name="deity">
				<anchored to="detailstitle2" position="belowright" offset="0,5" height="20">
					<left anchor="center" offset="5" />
				</anchored>
			</stringu>
			<label_charfieldtop>
				<anchored to="deity" offset="0,5" />
				<static textres="char_label_deity" />
			</label_charfieldtop>
            <!-- END alignment/deity title -->

            <!-- proficiencies weapon, used, non-weapon, used title -->
			<metalplate name="profstitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="40" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
			</metalplate>
            
            <label_titlechar name="char_profs_label">
				<anchored to="profstitle" position="insidetopleft" offset="0,0" />
				<static textres="char_profs_label" />
            </label_titlechar>
            <label_titlechar name="char_profs_weapon_label">
				<anchored to="char_profs_label" relation="relative" position="righthigh" offset="20,0" />
				<static textres="char_profs_weapon_label" />
            </label_titlechar>
            <label_titlechar name="char_profs_weaponused_label">
				<anchored to="char_profs_weapon_label" relation="relative" position="righthigh" offset="20,0"/>
				<static textres="char_profs_used_label" />
            </label_titlechar>
            <label_titlechar name="char_profs_nonweapon_label">
				<anchored to="char_profs_weaponused_label" relation="relative" position="righthigh" offset="20,0"/>
				<static textres="char_profs_nonweapon_label" />
            </label_titlechar>
            <label_titlechar name="char_profs_nonweapon_used_label">
				<anchored to="char_profs_nonweapon_label" relation="relative" position="righthigh" offset="15,0"/>
				<static textres="char_profs_used_label" />
            </label_titlechar>
            
			<number_profs_weapon name="weapon_proficiencies" source="proficiencies.weapon.max">
				<anchored to="char_profs_weapon_label" position="insidebottomleft" offset="10,-25" width="30" height="20"/>
			</number_profs_weapon>
			<number_profs_weapon_used name="weapon_proficiencies_used" source="proficiencies.weapon.used">
				<anchored to="char_profs_weaponused_label" position="insidebottomleft" offset="0,-25" width="30" height="20"/>
			</number_profs_weapon_used>
            
			<number_profs_nonweapon name="nonweapon_proficiencies" source="proficiencies.nonweapon.max">
				<anchored to="char_profs_nonweapon_label" position="insidebottomleft" offset="15,-25" width="30" height="20"/>
			</number_profs_nonweapon>
			<number_profs_nonweapon_used name="nonweapon_proficiencies_used" source="proficiencies.nonweapon.used">
				<anchored to="char_profs_nonweapon_used_label" position="insidebottomleft" offset="0,-25" width="30" height="20"/>
			</number_profs_nonweapon_used>
            <!-- END proficiencies weapon, used, non-weapon, used title -->
            
			<label_charframetop name="traitstitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="35" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<static textres="char_label_notes_traits" />
			</label_charframetop>
			<string_char_background name="personalitytraits">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
			</string_char_background>
			<label_charframetop name="idealstitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<static textres="char_label_notes_ideals" />
			</label_charframetop>
			<string_char_background name="ideals">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
			</string_char_background>
			<label_charframetop name="bondstitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<static textres="char_label_notes_bonds" />
			</label_charframetop>
			<string_char_background name="bonds">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
			</string_char_background>
			<label_charframetop name="flawstitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<static textres="char_label_notes_flaws" />
			</label_charframetop>
			<string_char_background name="flaws">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
			</string_char_background>

			<label_charframetop name="appearancetitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<static textres="char_label_appearance" />
			</label_charframetop>
			<stringu name="appearance">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</stringu>

			<label_charframetop name="notestitle">
				<anchored height="20">
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="10" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<static textres="char_label_notes" />
			</label_charframetop>
			<stringu name="notes">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
					<right offset="-10" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</stringu>
		</sheetdata>
	</windowclass>
</root>
