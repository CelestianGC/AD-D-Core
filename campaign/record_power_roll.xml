	<windowclass name="power_damage_entry">
		<margins control="0,0,0,5" />
    <script>
      function onInit()
        local sValue = dicetype.getStringValue();
        if (sValue == nil or sValue == "") then
          dicetype.setStringValue("dice");
        end
        sValue = dicetext.getValue();
        if (sValue == nil or sValue == "") then
          dicetext.setValue("LVLd6");
        end
        
        DB.addHandler(DB.getPath(getDatabaseNode(), "dicetype"),"onUpdate", update);
        update();
      end
      function onClose()
        DB.removeHandler(DB.getPath(getDatabaseNode(), "dicetype"),"onUpdate", update);
      end
      
      function update()
        local sValue = dicetype.getStringValue();
        if (sValue == "dice") then
          dice.setVisible(true);
          dicetext.setVisible(false);
        else
          dice.setVisible(false);
          dicetext.setVisible(true);
        end
      end
    </script>
