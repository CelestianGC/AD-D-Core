	<windowclass name="charsheet_actions_weapons">
		<script>
			function onDrop(x, y, draginfo)
				if contents.subwindow.weapons.onDrop(x, y, draginfo) then
                    local node = getDatabaseNode();
                    if not ActorManager.isPC(node) then
                        local sClass, sRecord = draginfo.getShortcutData();
                        if sClass == "item" then
                            processNPCWeapon(draginfo,sRecord, node);
                        end
                    end
					return true;
				end
				return false;
			end

            function processNPCWeapon(draginfo,sItemShortCutRecord, nodeNPC)
                local nodeWeapon = draginfo.getDatabaseNode();
                if not draginfo.isType("shortcut") then
                    return false;
                end
                CharManager.addToWeaponDB(nodeWeapon,nodeNPC, sItemShortCutRecord);
            end
		</script>
