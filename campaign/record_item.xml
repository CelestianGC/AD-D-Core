<root>
	<windowclass name="item" >
		<frame>recordsheet</frame>
		<placement>
			<size width="350" height="350" />
		</placement>
		<sizelimits>
			<minimum width="300" height="300" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_item</minimize>
		<nodelete />
		<script file="campaign/scripts/item.lua" />
		<sheetdata>
			<sub_record_header name="header">
				<class>item_header</class>
			</sub_record_header>

			<frame_record_content name="contentframe" />

			<subwindow_record name="main">
				<class>item_main</class>
				<activate />
			</subwindow_record>

			<subwindow_record name="weaponactions">
<!-- 				<class>weapon_item_weaponrecord</class> -->
				<class>charsheet_actions_weapons</class>
                
			</subwindow_record>

			<subwindow_record name="spellactions">
<!-- 				<class>power_item_spellrecord</class> -->
				<class>charsheet_actions_powers</class>
			</subwindow_record>
            
			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>weaponactions</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>spellactions</target>
			</scrollbar_record>

			<tabs_recordsheet>
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
                <tab>
                    <icon>tab_weapons</icon>
                    <subwindow>weaponactions</subwindow>
                </tab>
                <tab>
                    <icon>tab_powers</icon>
                    <subwindow>spellactions</subwindow>
                </tab>
			</tabs_recordsheet>

			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="item_header" merge="join">
		<margins control="0,0,0,2" />
	</windowclass>

	<windowclass name="item_main">
		<margins control="0,0,0,2" />
		<script file="campaign/scripts/item_main.lua" />
		<sheetdata>
            <hs name="rateofattack" />
            <hs name="range"/>
            <hs name="reach" />
            <hs name="knockdown" />
                
			<anchor_column name="columnanchor" />
			
			<label_column name="nonid_name_label">
				<static textres="item_label_unidentified" />
			</label_column>
			<string_columnh name="nonid_name" />
			
			<label_column name="nonidentified_label">
				<static textres="item_label_unidentifiednotes" />
			</label_column>
			<string_columnh name="nonidentified" />
			
			<line_column name="divider" />
			
			<label_column name="type_label">
				<static textres="item_label_type" />
			</label_column>
			<genericcontrol name="type_rightanchor">
				<anchored>
					<top parent="type_label" />
					<right />
				</anchored>
			</genericcontrol>
			<button_checkbox name="istemplate">
				<anchored width="20" height="20">
					<top parent="type_label" />
					<right parent="type_rightanchor" anchor="left" relation="relative" />
				</anchored>
				<gmvisibleonly />
			</button_checkbox>
			<label name="template_label">
				<anchored>
					<top parent="type_label" />
					<right parent="type_rightanchor" anchor="left" relation="relative" />
				</anchored>
				<static textres="item_label_template" />
				<gmvisibleonly />
			</label>
			<string_columnh name="type">
				<anchored>
					<right parent="type_rightanchor" anchor="left" relation="relative" offset="-10" />
				</anchored>
				<nohide />
				<gmeditonly />
				<delaykeyupdate />
				<script>
					function onValueChanged()
						window.update();
					end
				</script>
			</string_columnh>

			<label_column name="subtype_label">
				<static textres="item_label_subtype" />
			</label_column>
			<string_columnh name="subtype">
				<gmeditonly />
				<delaykeyupdate />
				<script>
					function onValueChanged()
						window.update();
					end
				</script>
			</string_columnh>

			<label_column name="rarity_label">
				<static textres="item_label_rarity" />
			</label_column>
			<string_columnh name="rarity">
				<gmeditonly />
			</string_columnh>

			<line_column name="divider2" />

			<label_column name="cost_label">
				<static textres="item_label_cost" />
			</label_column>
			<string_columnh name="cost">
				<gmeditonly />
			</string_columnh>

			<label_column name="weight_label">
				<static textres="item_label_weight" />
			</label_column>
			<number_columnh name="weight">
				<gmeditonly />
			</number_columnh>

			<line_column name="divider3" />

			<label_column name="bonus_label">
				<static textres="item_label_bonus" />
			</label_column>
			<number_columnh name="bonus">
				<gmeditonly />
				<delaykeyupdate />
				<displaysign />
			</number_columnh>
			
			<label_column name="damage_label">
				<static textres="item_label_damage" />
			</label_column>
			<string_columnh name="damage">
				<gmeditonly />
			</string_columnh>

			<label_column name="speedfactor_label">
				<static textres="item_label_speedfactor" />
			</label_column>
			<number_columnh name="speedfactor">
				<gmeditonly />
			</number_columnh>
			
			<label_column name="ac_label">
				<static textres="item_label_ac" />
			</label_column>
			<number_columnh name="ac">
				<gmeditonly />
				<delaykeyupdate />
			</number_columnh>
			
			<label_column name="dexbonus_label">
				<static textres="item_label_dexbonus" />
			</label_column>
			<string_columnh name="dexbonus">
				<gmeditonly />
				<delaykeyupdate />
			</string_columnh>
			
			<label_column name="strength_label">
				<static textres="item_label_strength" />
			</label_column>
			<string_columnh name="strength">
				<gmeditonly />
			</string_columnh>
			
			<label_column name="stealth_label">
				<static textres="item_label_stealth" />
			</label_column>
			<string_columnh name="stealth">
				<gmeditonly />
				<delaykeyupdate />
			</string_columnh>
			
			<label_column name="properties_label">
				<static textres="item_label_properties" />
			</label_column>
			<string_columnh name="properties">
				<gmeditonly />
			</string_columnh>
			
			<line_column name="divider4" />

			<ft_columnh name="description">
				<gmeditonly />
			</ft_columnh>
		</sheetdata>
	</windowclass>
    
	<!-- copy of char_weapon windowclass with tweaks specific to items -->
    <windowclass name="weapon_item_weaponrecord">
		<script file="campaign/scripts/char_weapon.lua"/>
        
		<margins control="0,0,0,2" />
		<sheetdata>
			<genericcontrol name="rightanchor">
				<anchored width="0" height="0">
					<top />
					<right />
				</anchored>
				<invisible />
			</genericcontrol>
			<linkfield name="shortcut">
				<anchored to="rightanchor" width="20" height="20">
					<top offset="8" />
					<right anchor="left" relation="relative" offset="-2" />
				</anchored>
				<readonly />
				<script>
					function onValueChanged()
						window.onLinkChanged();
					end
				</script>
			</linkfield>
			<button_idelete name="idelete">
				<anchored to="rightanchor">
					<top offset="8" />
					<right anchor="left" offset="-2" />
				</anchored>
			</button_idelete>
			<buttoncontrol name="activatedetail">
				<anchored to="rightanchor" width="20" height="20">
					<top offset="8" />
					<right anchor="left" relation="relative" offset="-3" />
				</anchored>
				<state icon="details" pressed="details_down" />
				<script>
					function onButtonPress()
						Interface.openWindow("char_weapon_editor", window.getDatabaseNode());
					end
				</script>
			</buttoncontrol>
			<genericcontrol name="leftanchor">
				<anchored width="0" height="0">
					<top />
					<left />
				</anchored>
				<invisible />
			</genericcontrol>

			<stringu name="name"> 
                <script>
					function onDoubleClick(x,y)
						return window.onAttackAction();
					end			
                </script>
                <anchored height="18">
                    <top offset="5" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                    <right parent="rightanchor" anchor="left" relation="relative" offset="-240" />
                </anchored>
			</stringu>


			<state_charweapontype name="type">
                <anchored height="18" >
                    <top offset="5" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="1" />
                </anchored>
				<script>
					function onValueChanged()
						window.onTypeChanged();
					end
				</script>
			</state_charweapontype>


            <number_actions_init name="speedfactor">
                <tooltip textres="power_label_initiative_tooltip" />
                <anchored height="18" width="25" >
                    <top offset="8" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="10" />
                </anchored>
            </number_actions_init>

			<genericcontrol name="attackshade">
                <anchored height="26" width="50" >
                    <top offset="3" />
                    <left parent="leftanchor" anchor="right" relation="relative" offset="0" />
                </anchored>
			</genericcontrol>
			<genericcontrol name="attackframe">
				<anchored to="attackshade" position="over" />
				<frame name="fielddark" />
				<script>
					function onInit()
						setHoverCursor("hand");
					end
					
					function onHover(bOnControl)
						window.highlightAttack(bOnControl);
					end

					function onDoubleClick(x,y)
						return window.onAttackAction();
					end			

					function onDragStart(button, x, y, draginfo)
						return window.onAttackAction(draginfo);
					end
				</script>
			</genericcontrol>
			<genericcontrol name="attackicon">
				<anchored to="attackframe" position="insidetopleft" offset="7,5" width="15" height="20" />
				<icon>d20ricon</icon>
				<script>
					function onInit()
						setHoverCursor("hand");
					end
					
					function onHover(bOnControl)
						window.highlightAttack(bOnControl);
					end

					function onDoubleClick(x,y)
						return window.onAttackAction();
					end			

					function onDragStart(button, x, y, draginfo)
						return window.onAttackAction(draginfo);
					end
				</script>
			</genericcontrol>
			<simplenumberc name="attackview">
				<anchored to="attackicon" position="righthigh" offset="2,-1" width="15" height="20" />
				<displaysign />
				<readonly />
				<script>
					function onInit()
						setHoverCursor("hand");
					end
					
					function onHover(bOnControl)
						window.highlightAttack(bOnControl);
					end

					function onDoubleClick(x,y)
						return window.onAttackAction();
					end			

					function onDragStart(button, x, y, draginfo)
						return window.onAttackAction(draginfo);
					end
				</script>
			</simplenumberc>
            <!-- damage section -->
            <windowlist name="damage_split_list">
                <anchored width="125" >
                    <top offset="5" /> 
                    <left parent="leftanchor" anchor="right" relation="relative" offset="5" />
                </anchored>
                <child></child>
                <child><backcolor>1A40301E</backcolor></child>
                <noscroll />
				<datasource>.damagelist</datasource>
				<class>split_damage_entries</class>
            </windowlist>
            
			<label name="label_ammo">
				<anchored width="50">
                    <top parent="name" anchor="bottom" relation="relative" offset="5" />
					<left offset="15" />
				</anchored>
				<static textres="char_label_weaponammo" />
			</label>
			<basicnumber name="maxammo">
				<anchored to="label_ammo" position="righthigh" width="30" height="20" />
				<min>0</min>
				<max>100</max>
			</basicnumber>
			<state_charammocounter name="ammocounter">
				<anchored to="maxammo" position="righthigh" offset="8,0" />
			</state_charammocounter>
		</sheetdata>
	</windowclass>
<!-- END char_weapon class -->
    
</root>
