      </button_idelete>
      <button_checkbox name="xpawarded">
        <anchored width="20" height="20">
          <top offset="2" />
          <right parent="rightanchor" anchor="left" relation="relative" offset="0" />
        </anchored>
        <tabtarget next="idelete" prev="xp" />
      </button_checkbox>
      <basicnumber name="xp">
        <anchored width="50" height="20">
          <top offset="2" />
          <right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
        </anchored>
        <hideonvalue>0</hideonvalue>
        <tabtarget next="xpawarded" prev="cr" />
      </basicnumber>
      <basicstring name="cr">
        <anchored width="20" height="20">
          <top offset="2" />
          <right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
        </anchored>
        <tabtarget next="xp" prev="name" />
      </basicstring>

      <basicstring name="name">
        <anchored>
          <top offset="2" />
          <left offset="5" />
          <right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
        </anchored>
