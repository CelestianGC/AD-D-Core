	<template name="record_token">
		<tokenfield name="token">
			<anchored to="rightanchor" width="25" height="25">
				<top offset="-2" />
				<right parent="rightanchor" anchor="left" relation="relative" offset="-3" />
			</anchored>
			<empty>token_empty</empty>
			<script>
				function onDoubleClick(...)
					CombatManager.openMap(window.getDatabaseNode())
				end
			</script>
		</tokenfield>
	</template>
	<template name="record_hostility">
		<hostility name="hostility">
			<anchored to="rightanchor">
				<top offset="1" />
				<right parent="rightanchor" anchor="left" relation="relative" offset="-3" />
			</anchored>
		</hostility>
	</template>
    <!-- end SW -->
</root>